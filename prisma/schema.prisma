generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id        Int      @id @default(autoincrement())
  name      String
  ticker    String
  quantity  Int
  buyPrice  Float
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  stocks Stock[]
}
